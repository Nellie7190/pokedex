    <h2>Starter Pokemon</h2>
    <%for( let i = 0; i < pokemon.length; i++) {%>
        <a href="/allpokemon/<%=i%>"><img src="<%=pokemon[i].img%>" alt="<%=pokemon[i].name%>"></a>
        <br>

        <!-- DELETE button -->
        <form action="/allPokemon/<=i%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE">
        </form>
        <br><br><br>
    <%}%>
</body>
</html>